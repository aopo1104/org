<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/Iv_CreateOrg_headPicutre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_add"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社团全名："/>
        <EditText
            android:id="@+id/ET_CreateOrg_OrgName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入社团全名"
            android:textSize="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校："/>
        <EditText
            android:id="@+id/ET_CreateOrg_SchoolName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入所在学校"
            android:textSize="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="挂靠单位："/>
        <EditText
            android:id="@+id/ET_CreateOrg_affiliatedUnitName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入挂靠单位"
            android:textSize="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性质："/>
        <Spinner
            android:id="@+id/Spinner_CreateOrg_orgType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Spinner_CreateOrg_orgProperty_data">
        </Spinner>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:id="@+id/layout_CreateOrg_orgStar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社团星级："/>
        <Spinner
            android:id="@+id/Spinner_CreateOrg_orgStar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Spinner_CreateOrg_orgStar">
        </Spinner>
    </LinearLayout>


    <Button
        android:id="@+id/Btn_CreateOrg_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="创建"
        android:background="#A4D3EE"
        />

</LinearLayout>
