<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout_activitylist"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_activitylist_type"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|right|end"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-30dp"
        android:background="@drawable/triangle_shape_red"
        android:rotation="0" />

    <TextView
        android:id="@+id/Tv_activitylist_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginTop="12dp"
        android:rotation="45"
        android:layout_alignParentRight="true"
        android:text="比赛"
        android:textColor="@android:color/white"
        android:textSize="12sp" />


    <com.loopj.android.image.SmartImageView
        android:id="@+id/Siv_activityInfoImg"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/Tv_activityInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/Siv_activityInfoImg"
        android:text=""
        android:textColor="#000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/Tv_activityInfoTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tv_activityInfoTitle"
        android:text="2018-12-15 16:57"
        android:textColor="#cccccc"
        android:layout_toRightOf="@+id/Siv_activityInfoImg"/>

    <TextView
        android:id="@+id/Tv_activityInfoContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="3"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/Tv_activityInfoTime"
        android:layout_toRightOf="@+id/Siv_activityInfoImg"
        android:text="​"
        android:textColor="#cccccc"/>

</RelativeLayout>