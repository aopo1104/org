<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Et_primaryTaskCreate_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="在这里输入标题"
                />

            <EditText
                android:id="@+id/Et_primaryTaskCreate_content"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:background="@drawable/bg_edittext_normal"
                android:layout_margin="10dp"
                android:gravity="top"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/Tv_primaryTaskCreate_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/Btn_primaryTaskCreate_startDate"
                    android:layout_centerVertical="true"
                    />
                <Button
                    android:id="@+id/Btn_primaryTaskCreate_startDate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightarrow"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="结束时间"/>
                <TextView
                    android:id="@+id/Tv_primaryTaskCreate_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/Btn_primaryTaskCreate_endDate"
                    android:layout_centerVertical="true"
                    />
                <Button
                    android:id="@+id/Btn_primaryTaskCreate_endDate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rightarrow"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray"/>

            <Button
                android:id="@+id/Btn_primaryTaskCreate_create"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="发布"
                android:background="#A4D3EE" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>