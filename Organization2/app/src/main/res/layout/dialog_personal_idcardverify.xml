<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#32CD32"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Tv_dialogIdCardVerify_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:minHeight="50dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:text="请判断信息是否正确"
            style="@style/dialog_idcardverify_textView" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/dialog_idcardverify_textView"
        android:text="姓名：" />
    <TextView
        android:id="@+id/Tv_dialogIdCardVerify_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/dialog_idcardverify_textView"
        android:text="11111"
        android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/dialog_idcardverify_textView"
                android:text="性别:   " />
            <TextView
                android:id="@+id/Tv_dialogIdCardVerify_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/dialog_idcardverify_textView"
                android:text="男"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/dialog_idcardverify_textView"
                android:text="民族:   " />
            <TextView
                android:id="@+id/Tv_dialogIdCardVerify_nation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/dialog_idcardverify_textView"
                android:text="汉族"
                android:textStyle="bold"/>
         </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/dialog_idcardverify_textView"
            android:text="出生年月:  " />
        <TextView
            android:id="@+id/Tv_dialogIdCardVerify_birth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/dialog_idcardverify_textView"
            android:text="1998-4-4"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/dialog_idcardverify_textView"
            android:text="住址:  " />
        <TextView
            android:id="@+id/Tv_dialogIdCardVerify_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/dialog_idcardverify_textView"
            android:text="111111111111111111111111111"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Button_dialogIdCardVerify_OK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定上传"
            android:textSize="25sp"
            android:textColor="#32CD32"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/Button_dialogIdCardVerify_photoAgain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:text="重新识别"
            android:textColor="#CD4F39"
            android:background="@android:color/transparent"
            android:textSize="25sp"/>
    </LinearLayout>
</LinearLayout>